<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.codetribe.my_kid.parent_Activities.CreateParentProfile">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout">



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_fullname"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/update_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"
                    android:background="#0000"
                    android:hint="Firstname"
                    android:inputType="textCapWords"
                    android:padding="@dimen/text_padding"
                    android:textAlignment="center"
                    android:textColor="#212121"
                    android:textColorHint="#212121"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:background="#212121"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_Surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:textSize="16dp"
                    android:id="@+id/update_Surname"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Surname"
                    android:textColorHint="#212121"
                    android:inputType="textCapWords"
                    android:textColor="#212121"
                    android:background="#0000"
                    android:padding="@dimen/text_padding"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:background="#212121"/>




            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:textSize="16dp"
                    android:id="@+id/update_address"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Resident Address"
                    android:textColorHint="#212121"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"
                    android:inputType="textCapWords"
                    android:textColor="#212121"
                    android:background="#0000"
                    android:padding="@dimen/text_padding"
                  />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:background="#212121"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:textSize="16dp"
                    android:id="@+id/update_city"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:textColorHint="#212121"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"
                    android:inputType="textCapWords"
                    android:textColor="#212121"
                    android:background="#0000"
                    android:padding="@dimen/text_padding"
             />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:background="#212121"/>




            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_phoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:textSize="16dp"
                    android:id="@+id/update_phone"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:textColorHint="#212121"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#212121"
                    android:background="#0000"
                    android:padding="@dimen/text_padding"
                  />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#212121"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
</layout>