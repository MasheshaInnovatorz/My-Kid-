<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codetribe.my_kid.CreateParentProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout">



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/update_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"
                    android:background="#0000"
                    android:hint="Firstname"
                    android:inputType="textCapWords"
                    android:padding="16dp"
                    android:textAlignment="center"
                    android:textColor="#ADCCE2"
                    android:textColorHint="#ADCCE2"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_Surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textSize="16dp"
                    android:id="@+id/update_Surname"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Surname"
                    android:textColorHint="#ADCCE2"
                    android:inputType="textCapWords"
                    android:textColor="#ADCCE2"
                    android:background="#0000"
                    android:padding="16dp"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"/>
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>




            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:id="@+id/update_address"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Resident Address"
                    android:textColorHint="#ADCCE2"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"
                    android:inputType="textCapWords"
                    android:textColor="#ADCCE2"
                    android:background="#0000"
                    android:padding="16dp"
                  />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:id="@+id/update_city"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:textColorHint="#ADCCE2"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"
                    android:inputType="textCapWords"
                    android:textColor="#ADCCE2"
                    android:background="#0000"
                    android:padding="16dp"
             />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>




            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_update_phoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:id="@+id/update_phone"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:textColorHint="#ADCCE2"
                    android:layout_marginLeft="@dimen/text_left"
                    android:layout_marginRight="@dimen/text_right"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#ADCCE2"
                    android:background="#0000"
                    android:padding="16dp"
                  />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>





            <TextView
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/angle"
                android:text="Update Profile"
                android:textSize="16dp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="28dp"
                android:layout_marginTop="32dp"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
