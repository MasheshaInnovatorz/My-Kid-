<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">




    <LinearLayout
        android:background="@drawable/layoutstyle1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:text="mavhungu Phuluso"
            android:id="@+id/senderid"
          />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="share"
            android:drawableRight="@drawable/ic_share_black_24dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:saveEnabled="true"
           />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Image name"
        android:id="@+id/tvImageName"/>

</LinearLayout>

    <LinearLayout
        android:id="@+id/rlSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layoutstyle1"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">
        <!-- set profile pic button -->
        <ImageView
            android:id="@+id/send_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/etMessage"
            android:layout_weight="0.1"
            android:background="@drawable/button_style"
            android:onClick="attV"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/attachment" />

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/btSend"
            android:layout_toLeftOf="@+id/btSend"
            android:layout_weight="0.7"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FDFDFE"
            android:drawableRight="@drawable/ic_comment_black_24dp"
            android:gravity="center_vertical"
            android:hint="Reply"
            android:imeOptions="actionSend"
            android:inputType="textShortMessage"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_weight="0.13"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:text="reply"
            android:textColor="@android:color/white"
            android:textSize="10sp"></Button>

    </LinearLayout>
</LinearLayout>

