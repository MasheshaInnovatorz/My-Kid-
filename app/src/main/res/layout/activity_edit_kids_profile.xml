<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/kidsbackground1"
    android:layout_height="match_parent"
    tools:context="com.example.codetribe.my_kid.Profile_Update">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/timg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:text="Update Your Kid Profile"
                android:background="@drawable/textviewsstyle"
                android:textSize="30sp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#ADCCE2"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/parentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textSize="16dp"
                    android:id="@+id/editParentId"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint=" Parent ID"
                    android:textColorHint="#ADCCE2"
                    android:layout_marginLeft="22dp"
                    android:inputType="textCapWords"
                    android:maxLength="12"
                    android:textColor="#ADCCE2"
                    android:background="#0000"

                    android:padding="16dp"
                    android:layout_marginRight="35dp"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/editAllergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_Allergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="35dp"
                    android:background="#0000"
                    android:hint="Allergies information"
                    android:inputType="textCapWords"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:textAlignment="center"
                    android:textColor="#ADCCE2"
                    android:textColorHint="#ADCCE2"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dietRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textSize="16dp"
                    android:id="@+id/diet_Requirements"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint=" Diet Information"
                    android:textColorHint="#ADCCE2"
                    android:layout_marginLeft="22dp"
                    android:inputType="textCapWords"
                    android:maxLength="12"
                    android:textColor="#ADCCE2"
                    android:background="#0000"

                    android:padding="16dp"
                    android:layout_marginRight="35dp"/>
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editBodyWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:id="@+id/edit_BodyWeight"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint=" Body Weight"
                    android:textColorHint="#ADCCE2"
                    android:layout_marginLeft="22dp"
                    android:inputType="textCapWords"
                    android:maxLength="12"
                    android:textColor="#ADCCE2"
                    android:background="#0000"
                    android:padding="16dp"
                    android:layout_marginRight="35dp"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/doctorsRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:id="@+id/doctorsRecomendations"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Doctors Recomendations"
                    android:textColorHint="#ADCCE2"
                    android:layout_marginLeft="22dp"
                    android:inputType="textCapWords"
                    android:maxLength="12"
                    android:textColor="#ADCCE2"
                    android:background="#0000"
                    android:padding="16dp"
                    android:layout_marginRight="35dp"/>

            </android.support.design.widget.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:id="@+id/height"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="kid Height"
                    android:textColorHint="#ADCCE2"
                    android:layout_marginLeft="22dp"
                    android:inputType="textCapWords"
                    android:maxLength="12"
                    android:textColor="#ADCCE2"
                    android:background="#0000"
                    android:padding="16dp"
                    android:layout_marginRight="35dp"/>

            </android.support.design.widget.TextInputLayout>




            <TextView
                android:id="@+id/upDateKid_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/angle"
                android:text="Update Kid information"
                android:textSize="16dp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="28dp"
                android:layout_marginTop="32dp"
                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
