<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="40dp"
   >

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:src="@drawable/mykidicon" />



<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/linearLayout4"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="21dp"
    android:text="Welcome To Kids Creatives"
    android:textAlignment="center"
    android:textColor="#212121"
    android:textSize="20sp" />






<android.support.design.widget.TextInputLayout
    android:id="@+id/input_log_email"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="@dimen/text_padding" />
</android.support.design.widget.TextInputLayout>







<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:passwordToggleContentDescription="ruuu"
    app:passwordToggleDrawable="@drawable/ic_remove_red_eye_black_24dp"
    app:passwordToggleEnabled="true">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:padding="@dimen/text_padding"
        android:textSize="20sp"
        />
</android.support.design.widget.TextInputLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginTop="16dp"
    android:id="@+id/forget_password"
    android:text="Forgot Password?"
    android:textColor="#212121"
    android:textSize="16sp" />

<Button
    android:padding="@dimen/text_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:background="@drawable/angle"
    android:text="Log In"
    android:id="@+id/login"
    android:textColor="#fff" />

</LinearLayout>

