<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/myCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:id="@+id/MyRelative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kidlogo"
        android:gravity="center_horizontal" />

</RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_log_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="16sp"
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:inputType="text"
                android:textColor="#212121"
                android:padding="@dimen/text_padding"
                />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleContentDescription="ruuu"
            app:passwordToggleDrawable="@drawable/ic_remove_red_eye_black_24dp"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginRight="@dimen/text_right"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="@dimen/text_padding"
                android:textSize="16sp"
                />
        </android.support.design.widget.TextInputLayout>





        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="@dimen/text_left"
            android:layout_marginRight="@dimen/text_right"
            android:layout_marginTop="10dp"
            android:background="@drawable/angle"
            android:gravity="center"
            android:padding="@dimen/button_padding"
            android:text="Log In"
            android:textSize="16sp"
            android:textColor="#fff"
          />


        <TextView
            android:text="Not a member? Sign up now."
            android:id="@+id/loginsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/text_left"
            android:layout_marginRight="@dimen/text_right"
            android:layout_marginTop="5dp"
            android:textColor="#212121"
            android:textSize="16sp" />
<TextView
    android:id="@+id/forget_password"
    android:text="Forgot Password?"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginLeft="@dimen/text_left"
    android:layout_marginRight="@dimen/text_right"
    android:layout_marginTop="5dp"
    android:textColor="#212121"
    android:textSize="16sp"
    android:layout_marginBottom="28dp"

 />
    </LinearLayout>
</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
</layout>

