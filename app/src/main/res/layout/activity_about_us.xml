<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codetribe.my_kid.aboutUs_Activity.AboutUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/scrum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text=" Mashesha Digital innovators"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"></TextView>


            <TextView
                android:id="@+id/decription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/head"
                android:padding="10dp"
                android:text="@string/text_with_paragraphs"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/decription"
                android:text="KIDS CREATIVES DEVELOPERS"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"></TextView>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/decription"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="24dp"
                android:id="@+id/tableLayout2">



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="center_horizontal">



                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/idmageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_gravity=""
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/benipic" />


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imagedView5"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/cardview_dark_background"
                        android:src="@drawable/pfari3" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:text="Benny Nkosi"
                        android:layout_marginLeft="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="70dp"
                        android:layout_weight="2"
                        android:text="Mavhungu Pfariso"

                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                  <!--  <ImageView
                        android:id="@+id/dffnjjdfd"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_alignTop="@+id/tableLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="2"
                        android:src="@drawable/talipic" />
-->

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imagedView6"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="130dp"
                        android:backgroundTint="@color/cardview_dark_background"
                        android:src="@drawable/talipic" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Munwana Talifhani"
                        android:textAlignment="center"
                        android:textColor="#000000"></TextView>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_gravity=""
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/rudzypic" />


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/hebetpic" />


                </TableRow>

                <TableRow>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:text="Mudau Rudzani"
                        android:layout_marginLeft="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000"></TextView>


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="2"
                        android:text="Herbeth Matjila"
                        android:layout_marginLeft="90dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000000" />
                </TableRow>
            </TableLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
