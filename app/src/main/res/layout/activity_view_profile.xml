<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/timg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- cover_header/top background -->
        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
        <!-- user_profile_photo -->
        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#54abee"
            android:elevation="4dp"
            android:paddingBottom="24dp">
            <!-- you can delete these buttons wa dira drop whata what..-->

           <!-- edit profile button -->

            <TextView
                android:id="@+id/editprofile"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="edit profile"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:drawableRight="@drawable/ic_edit_black_24dp" />


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Luambo Dologi"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
            <!-- set user status -->
            <TextView
                android:id="@+id/user_profile_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Ndi Muvhenda"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- profile details-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:padding="3dp"
            android:background="@drawable/kidsbackground1"
            android:layout_alignParentStart="true"
            >
            <!-- any info you wanna display using the texViews below-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/timg"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="#000000"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/textviewsstyle"
                        android:text="Gender :" />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textviewsstyle"
                        android:textColor="#000000"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Phone Number :"/>

                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="#000000"
                        android:background="@drawable/textviewsstyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Lives in  :" />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textviewsstyle"
                        android:textColor="#000000"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="Email Address :" />



                </LinearLayout>


                <LinearLayout
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/timg"
                    android:layout_width="0dp">

                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="#E0E0E0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gender_view"
                        android:padding="10dp"
                        android:background="@drawable/textviewsstyle"
                        android:text="Female" />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textviewsstyle"
                        android:textColor="#E0E0E0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone_view"
                        android:padding="10dp"
                        android:text="0727056059"/>

                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="#E0E0E0"
                        android:background="@drawable/textviewsstyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/address_view"
                        android:text="Mandala" />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:background="@drawable/textviewsstyle"
                        android:textColor="#E0E0E0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/email_view"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="mudaurrudzani@gmail.com" />


              </LinearLayout>

                </LinearLayout>
    </RelativeLayout>
</ScrollView>