<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/kidsbackground1"
    android:padding="1dp"
    tools:context="com.example.codetribe.my_kid.Chat">



    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:background="@drawable/textviewsstyle"
        android:text="Upload kids work here"
        android:textAlignment="center"
        android:textSize="30sp" />
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:src="@drawable/photo_camera_"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/head"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/entername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/editextstyle"
        android:backgroundTint="#B3E5FC"
        android:drawableLeft="@drawable/ic_mood_black_24dp"
        android:hint="write kids progress update..."
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">



        <TextView
            android:id="@+id/txtBrowse_click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/angle"
            android:drawableLeft="@drawable/ic_attach_file_black_24dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Browse image"
            android:textColor="#fff"
            android:textSize="16dp"

            />


        <TextView
            android:id="@+id/txtUpload_click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/angle"
            android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Update progress"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>





